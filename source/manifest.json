{
	"name": "mothreader",
	"version": "0.1.0",
	"description": "glasses for moths",
	"homepage_url": "https://github.com/beep-beep-beep-boop/mothreader",
	"manifest_version": 2,
	"minimum_chrome_version": "74",
	"applications": {
		"gecko": {
			"id": "mothreader@beep-beep-boop-boop.github.io",
			"strict_min_version": "67.0"
		}
	},
	"icons": {
		"128": "icon.png"
	},
	"permissions": [
		"storage",
		"activeTab"
	],
	"content_scripts": [ 
		{
			"matches": [ 
				"<all_urls>"
			],
			"js": [ "content.js" ]
		}
 	],
	"options_ui": {
		"chrome_style": true,
		"page": "options.html"
	},
	"background": {
		"persistent": false,
		"scripts": [
			"background.js"
		]
	},
	"browser_action": {
		"default_icon": "icon.png",
		"default_title": "toggle mothreader"
	}

}
